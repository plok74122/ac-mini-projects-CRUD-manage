<h1>Book List</h1>
<table>
  <tr>
    <th>Book Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Book Condition</th>
  </tr>
  <% @book.each do |book| %>
      <tr>
        <td><%= link_to book.name , book_path(book) %></td>
        <td><%= book.description %></td>
        <td><%= book.cost %></td>
        <td><%= book.book_condition.name %></td>
      </tr>
  <% end %>
</table>
<%= paginate @book %>