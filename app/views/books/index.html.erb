<h1>Book List</h1>
<table>
  <tr>
    <th>Book Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Book Condition</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @book_list.each do |book| %>
      <tr>
        <td><%= link_to book.name , book_path(book) %></td>
        <td><%= book.description %></td>
        <td><%= book.cost %></td>
        <td><%= book.book_condition.name %></td>
        <td><%= link_to "edit", {'edit' => book.id, 'page' => @book_list.current_page} %></td>
        <td><%= link_to "delete", book_path(:id => book , :page => @book_list.current_page), :method => :delete %></td>
      </tr>
  <% end %>
</table>
<%= paginate @book_list %>
<% if @book.new_record? %>
    <h1>Create a new book</h1>
<% else %>
    <h1>Edit book id <%= @book.id %></h1>
<% end %>
<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
          <li style="color:red"><%= msg %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for @book do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
    <%= f.label :book_condition_id %>
    <%= f.select :book_condition_id, BookCondition.all.collect { |book_condition| [book_condition.name, book_condition.id] }, {:selected => @book.book_condition_id, include_blank: true} %>
    <%= f.submit %>
<% end %>