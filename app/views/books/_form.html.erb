<% if book.errors.any? %>
    <ul>
      <% book.errors.full_messages.each do |msg| %>
          <li style="color:red"><%= msg %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for book do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :cost %>
      <%= f.text_field :cost, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :book_condition_id %>
      <%= f.select :book_condition_id, BookCondition.all.collect { |book_condition| [book_condition.name, book_condition.id] }, {:selected => book.book_condition_id, include_blank: true}, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :buy_time %>
      <%= f.datetime_select :buy_time, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :publish_date %>
      <%= f.date_select :publish_date, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit :class => 'btn' %>
    </div>
<% end %>